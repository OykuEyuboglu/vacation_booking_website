<script>
    document.querySelector('.btnShow').addEventListener('click', async function () {
        // Kullanıcı ID'sini çekmek için API çağrısı
        try {
            const userIdResponse = await fetch('/Customer/GetUserId', {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            // Kullanıcı ID'sini JSON olarak al
            const userIdData = await userIdResponse.json();
            const userId = userIdData.id; // Kullanıcı ID'sini aldık

            // Kullanıcı ID'si ile rezervasyonlar sayfasına yönlendir
            window.location.href = `/Customer/GetReservations?userId=${userId}`;
        } catch (error) {
            console.error('Error fetching user ID:', error);
        }

    });
</script>