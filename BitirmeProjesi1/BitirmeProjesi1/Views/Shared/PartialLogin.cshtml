
@{
    ViewData["Title"] = "PartialLogin";
}
@using BitirmeProjesi1.DTOS
@model BitirmeProjesi1.DTOS.LoginDTO

<form asp-controller="Account" asp-action="Login" method="post">

    <input type="hidden" asp-for="ID" />

    <div class="input-box">
        <span class="icon"><ion-icon name="mail"></ion-icon></span>
        <input class="inputInput" type="email" asp-for="Email" required>
        <label class="inputLabel">Gmail</label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="input-box">
        <span class="icon"><ion-icon name="lock-closed"></ion-icon></span>
        <input class="inputInput" type="password" asp-for="Password" required>
        <label class="inputLabel">Şifre</label>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <form asp-controller="Account" asp-action="Login" method="post" style="display:inline;">
        <button type="submit" class="btnLogin-popup btn btn-detail">Giriş Yap</button>
    </form>


    <div class="login-register">
        <p>Bir hesabın yok mu?<a href="#" class="register-link">Üye Ol</a></p>
    </div>
</form>
